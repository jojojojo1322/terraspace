###############################################################
# 프로젝트 환경 변수
###############################################################
variable "env" {
  type = string
  default = "<%= expansion(':ENV') %>"
}

###############################################################
# 프로젝트 서비스 이름
###############################################################
variable "svr_nm" {
  type = string
}

###############################################################
# 프로젝트 클러스터 이름
###############################################################
variable "cluster_name" {
  type = string
}

###############################################################
# 생성할 클러스터 ADD-ON 상세
###############################################################
variable "addons" {
  type = list(object({
    name    = string
    version = string
  }))
}
